<div class="container mx-auto px-sm-0">
  <div class="row">
    <!--部分テンプレート_user_infoを呼び出し-->
    <%= render 'users/user_info',{book: @book,book_new: @book_new,user: @user} %>

    <div class="col-md-8 offset-1 md-3">
      <h2>Book detail</h2>
      <!--userの画像は下の一文で表示される？-->
      <!--%= image_tag @book.get_image %>-->
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <!--該当userの投稿一覧画面へのリンクへ-->
              <%= link_to @book.user.name,user_path(@book.user.id) %>
            </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body%></td>
            <td>
              <% if @book.user == current_user %>
                <!--%= link_to "Edit",edit_book_path(@book.id) %>-->
                <%= link_to edit_book_path(@book.id),class:"btn btn-success" do %>
                  <span>Edit</span>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <!--%= link_to "Destroy",book_path(@book),method: :delete %>-->
                <%= link_to book_path(@book),method: :delete,"data-cofirm" => "本当に消しますか？",class:"btn btn-danger" do %>
                  <span>Destroy</span>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <!--<p>%= @book.user.name %></p>-->
      <!--<p>%= @book.created_at.strftime('%Y/%m/%d') %></p>-->
    </div>
  </div>
</div>
