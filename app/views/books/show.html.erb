<!--successメッセージ-->
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<!--<td>%= link_to book.title,book_path(book.id) %></td>-->


<!--部分テンプレート_user_infoを呼び出し-->
<%= render 'users/user_info',{book: @book,book_new: @book_new,user: @user} %>

<div>
  <h2>Book detail</h2>
  <!--userの画像は下の一文で表示される？-->
  <!--%= image_tag @book.get_image %>-->
    <table>
      <tbody>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <!--該当userの投稿一覧画面へのリンクへ-->
            <%= link_to @book.user.name,user_path(@book.user.id) %>
          </td>
          <td><%= link_to @book.title,book_path(@book.id) %></td>
          <td><%= @book.opinion %></td>
        </tr>
      </tbody>
    </table>
  <!--<p>%= @book.user.name %></p>-->
  <!--<p>%= @book.created_at.strftime('%Y/%m/%d') %></p>-->
  <% if @book.user == current_user %>
    <%= link_to "Edit",edit_book_path(@book.id) %>
    <%= link_to "Destroy",book_path(@book),method: :delete %>
  <% end %>

</div>
