<!--カリキュラムではuser/showへ記載になっていた部分-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレート_user_infoを呼び出し-->
    <%= render 'users/user_info',{user: @user,book_new: @book_new} %>

<!--ユーザの投稿一覧-->
    <div class="col-md-8 offset-1 md-1">
      <h2>Books</h2>
      <!--table-hoverでカーソルを置くと色が変わる-->
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--userの画像は下の一文で表示できている?-->
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <!--一覧画面に詳細画面のリンクを設定-->
            <!--見本ではclassにbook_idにidが入っている-->
            <td><%= link_to book.title,book_path(book.id),class:"book_id" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <!--ページネーション-->
      <%= paginate @books %>
    </div>
  </div>
</div>

