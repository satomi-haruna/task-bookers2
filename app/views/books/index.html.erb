<!--カリキュラムではuser/showへ記載になっていた部分-->
<!--successメッセージ-->
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>


<!--部分テンプレート_user_infoを呼び出し-->
<%= render 'users/user_info',{user: @user,book_new: @book_new} %>

<!--ユーザの投稿一覧-->
<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

      <!--何かがおかしい？-->
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <!--userの画像は下の一文で表示できている?-->
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <!--一覧画面に詳細画面のリンクを設定-->
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

    <!--ページネーション-->
  <%= paginate @books %>
</div>


