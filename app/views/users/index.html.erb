<!--book/indexを引用。Userの一覧-->
<div class="container mx-auto px-sm-0">
  <div class="row">
    <!--部分テンプレート_user_infoを呼び出し-->
    <%= render 'users/user_info',{user: @user,book_new: @book_new} %>

<!--ユーザの投稿一覧-->
    <div class="col-md-7 offset-1 px-3">
      <h2 class="mb-2">Books</h2>
      <!--table-hoverでカーソルを置くと色が変わる-->
      <table class="mb-2 table-hover">
        <thead class="table ">
          <tr>
            <th style="width:35%;">image</th>
            <th style="width:50%;">name</th>
            <th style="width:15%;"></th>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td style="width:10%;" class="p-3"><%= image_tag user.get_profile_image(100,100) %></td>
            <td style="width:30%;" class="p-3"><%= user.name %></td>
            <!--該当userの投稿一覧画面のリンクを設定したい-->
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <!--ページネーション-->
  <%= paginate @users %>
</div>
