<!--book/indexを引用。Userの一覧-->
<div class="container mx-auto px-sm-0">
  <div class="row">
    <!--部分テンプレート_user_infoを呼び出し-->
    <%= render 'users/user_info',{user: @user,book_new: @book_new} %>

<!--ユーザの投稿一覧-->
    <div class="col-md-8 offset-1 md-3">
      <h2>Books</h2>
      <!--table-hoverでカーソルを置くと色が変わる-->
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <!--該当userの投稿一覧画面のリンクを設定したい-->
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <!--ページネーション-->
  <%= paginate @users %>
</div>
