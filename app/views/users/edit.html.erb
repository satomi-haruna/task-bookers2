<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-sm-0">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <% if @user.errors.count == 1 %>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        <% else %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
        <% end %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <input type="text" id="inputName" class="form-control" autofocus="true" value="<% @user.name %>"><!--placeholder:"名前" 入力前に自動的に入る文言-->
        </div>
        <div class="form-group">
          <label for="image">Image</label><br>
          <input type="file" placeholde=:"profile_image" accept:"image/*" >
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <!--自己紹介文、id:"introduction"とか入れるのかな？-->
          <textarea class="form-control" value="<% @user.introduction %>"></textarea>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
